<?xml version="1.0" encoding="UTF-8" ?>
<c3p0-config>
	<default-config> 
		<property name="jdbcUrl">jdbc:mysql://39.108.0.229:3306/zook?characterEncoding=utf-8</property>
		<property name="driverClass">com.mysql.jdbc.Driver</property>
		<property name="user">root</property>
		<property name="password">root123</property>
        <!-- maxIdleTimeExcessConnections将连接池的连接数保持在minpoolsize 必须小于maxIdleTime设置  默认值为0代表不处理  单位秒 -->  
        <property name="maxIdleTimeExcessConnections">15</property>
        <!--acquireIncrement当连接池中的连接耗尽的时候c3p0一次同时获取的连接数。默认值是3 -->
        <property name="acquireIncrement">10</property>
		<!-- initialPoolSize连接池初始化时建立的连接数 默认值是3 -->  
		<property name="initialPoolSize">10</property>
        <!-- minPoolSize连接池中保持的最小连接数  默认值为3个-->  
		<property name="minPoolSize">5</property>
        <!-- maxPoolSize连接池中拥有的最大连接数 默认值为15个 -->  
		<property name="maxPoolSize">20</property>
	</default-config>
</c3p0-config>